<?xml version="1.0" encoding="utf-8"?>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".ui.categoria.Edit_Categoria">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_categoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColorHint="@android:color/darker_gray">

                <EditText
                    android:id="@+id/edtCategoriaUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:drawablePadding="5dp"
                    android:ems="10"
                    android:hint="Escriba el Id de su categorÃ­a"
                    android:inputType="number"
                    android:paddingLeft="1dp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="14dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tiNombreCategoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:textColorHint="@android:color/darker_gray">

                <EditText
                    android:id="@+id/edtNombreCategoriaUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:drawablePadding="5dp"
                    android:drawableTint="@android:color/holo_blue_dark"
                    android:ems="10"
                    android:hint="Digite el nombre categoria"
                    android:inputType="text"
                    android:paddingLeft="1dp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="14dp" />

            </com.google.android.material.textfield.TextInputLayout>


                <Spinner
                    android:id="@+id/sp_estadoUp"
                    style="@style/Widget.AppCompat.DropDownItem.Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="@dimen/space20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/estilospinner"
                    android:popupBackground="@color/black"
                    android:backgroundTint="@color/black"
                    android:spinnerMode="dropdown"
                    android:outlineAmbientShadowColor="@color/black"
                    android:textColorHint="@android:color/holo_red_dark" />

                <Button
                    android:id="@+id/btnUpdate"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="@dimen/space20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/red"
                    android:text="Actualizar"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/btnSalir"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="@dimen/space20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/black"
                    android:text="Retornar"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />




        </LinearLayout>